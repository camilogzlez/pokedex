
<header align="center">

</header>

<div class="result-box">
  <div align="center">
 <h1>Name: <%= @pokemon[:name].capitalize %></h1>
  <%= image_tag "#{@pokemon[:sprites][:other][:home][:front_default]}" %>
  <h1>Type: <% @pokemon[:types].each do |type|%></h1> 
    </h1><%= type[:type][:name] %></h1>
  <h1><% end %></h1>

  <h1>Weight: <%= @pokemon[:weight] %></h1>
  <h1>Abilities: <% @pokemon[:abilities].each do |ability|%></h1> 
    </h1><%= ability[:ability][:name] %></h1>
  <h1><% end %></h1>
  <h1>Next evolution: >> <%= @pokemon_evolutions[:chain][:evolves_to][0][:species][:name] %> </h1>
  <h1>Description: <%= @pokemon_especies[:flavor_text_entries][0][:flavor_text] %> </h1>
   
  </div>

</div>